<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PaymentDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"

            android:id="@+id/txtConfirm"
            android:text="@string/xacNhanThanhToan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingBottom="40dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />

<!--
        <TextView
            android:id="@+id/txtId"
            android:textSize="16sp"
            android:text="Mã chuyển khoản: "
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
-->

        <TextView
            android:id="@+id/txtAmount"
            android:text="Đã chuyển khoản: "
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

<!--
        <TextView
            android:id="@+id/txtStatus"
            android:text="Tình trạng thanh toán: "
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
-->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            android:text="Nhấn quay lại trang chủ để khám phá thêm nhiều sản phẩm khác!"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnHome"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="Quay lại trang chủ"
            android:onClick="BackToHome"
            android:background="@color/colorAccent"
            />


    </LinearLayout>

</RelativeLayout>