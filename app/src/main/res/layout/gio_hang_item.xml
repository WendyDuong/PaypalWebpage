<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        >

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="170dp"
    >


    <TextView
        android:id="@+id/ten_item_gio_hang"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:singleLine="false"
        android:text="Bánh Sisi Mix Brand"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/anh_item_gio_hang"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/anh_item_gio_hang"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anhbanhnho" />

    <TextView
        android:id="@+id/khoi_luong_item_gio_hang"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_height="0dp"
        android:text="Khối Lượng: 220g"
        app:layout_constraintStart_toEndOf="@id/anh_item_gio_hang"
        app:layout_constraintTop_toBottomOf="@id/ten_item_gio_hang" />

    <TextView
        android:id="@+id/gia_item_gio_hang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50.000"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textColor="#fa3223"
        app:layout_constraintStart_toEndOf="@id/anh_item_gio_hang"
        app:layout_constraintTop_toBottomOf="@id/khoi_luong_item_gio_hang" />

    <ImageButton
        android:id="@+id/button_giam"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/minus"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/anh_item_gio_hang"
        app:layout_constraintTop_toBottomOf="@+id/gia_item_gio_hang"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/so_luong_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_giam"
        app:layout_constraintTop_toBottomOf="@+id/gia_item_gio_hang"
        app:layout_constraintVertical_bias="0.52" />

    <ImageButton
        android:id="@+id/button_tang"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/add"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/so_luong_item"
        app:layout_constraintTop_toBottomOf="@+id/gia_item_gio_hang"
        app:layout_constraintVertical_bias="0.52" />

    <ImageButton
        android:id="@+id/button_xoa_gio_hang"
        android:layout_width="54dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:src="@drawable/delete"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>
